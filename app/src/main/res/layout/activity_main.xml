<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.anda.etobtracking.com.anda.mytracking.maps.MapsActivity"/>

    <RelativeLayout
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@color/balance_bg"
        android:layout_marginTop="@dimen/balance_margin"
        android:layout_marginLeft="@dimen/balance_margin"
        android:layout_width="@dimen/balance_width"
        android:layout_height="@dimen/balance_height">
        <TextView
            android:layout_centerInParent="true"
            android:id="@+id/balance"
            android:text="@string/balance"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</RelativeLayout>